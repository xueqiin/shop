@import '../tpls/product/product_tpl.wxss';
.container{
  width: 100%;
  flex-direction: column; 
}

/*banner*/
.swiper{
  width:100%;
  height:400rpx;
}

.swiper swiper-item{
  width: 100%;
  height:100%;
}

.swiper swiper-item image{
  width: 100%;
  height:100%''
}
/*banner_end*/

/*search*/
.search-box{
  width: 97%;
  height:90rpx;
  margin:5px 10rpx 0px 10rpx;
  border:1px solid #c0c0c0;
  border-radius: 15rpx;
}

.search-box input{
  width: 100%;
  height: 100%;
  margin:0px;
  text-align: center;
  line-height: 100rpx;
}

.search-line{
  width: 100%;
  height:2rpx;
  margin:5px 0px 0px 0px;
  background-color: #c0c0c0;
}
/*search_end*/
/*menu*/
.menu{
  width: 100%;
  height:85px;
  margin: 25px 0px 0px 0px;
  display: flex;
  flex-direction: row;
}

.menu-item{
  width: 156rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-left: 26rpx;
}

.menu-item image{
  width: 155rpx;
}

.menu-item text{
  text-align: center;
  margin-top:5px;
  font-size: 30rpx; 
}
/*menu_end*/

/*list*/
.list{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top:15px;
  clear: both;
}

.list_title{
  width: 100%;
  height: 70px;
  line-height: 70px;
  display: flex;
  flex-direction: row;
}

.title{
  width: 49%;
  height: 100%;
  overflow: hidden;
  padding-left:40rpx;
  font-size: 50rpx;
  color: #78807d;
}

.more{
  width: 49%;
  height: 100%;
  overflow: hidden;
  text-align: right;
  padding-right: 40rpx;
  font-size: 35rpx;
  color: #78807d;
}

.list_product{
  width: 100%;
}
/*list_end*/