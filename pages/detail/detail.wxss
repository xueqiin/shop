.container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.swiper{
  width: 100%;
  height: 752rpx;
}

.swiper swiper-item{
  width: 100%;
}

.swiper swiper-item image{
  width: 100%;
  height: 752rpx;
}

.car_icon{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 10rpx;
  top:10rpx;
  opacity: 0.6;
}

.info{
  width: 100%;
  height: 85px;
  margin-top: 10px;
  display: flex;
  flex-direction: column;
}

.info_title{
 width: 100%;
 height: 48px;
 display: flex;
 flex-direction: row;
}

.info_title text{
  line-height: 48px;
  margin-left:20rpx;
  color: #3b3939;
}

.info_title image{
  width:60rpx;
  height: 46px;
  margin-left: 60%;
}

.info_num{
  width: 100%;
  margin-top: 10px;
}

.info_num text{
  margin-left: 38rpx;
  font-size: 32rpx;
  color:#686565;
}

.detail_box{
  width: 100%;
  margin-top:20px;
}

.norms{
  width: 100%;
  height: 48px;
  line-height: 38px;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #999595;
}

.norms text{
  margin-left:35rpx;
  color:#7e7777;
}

.detail{
  width: 100%;
  height: auto;
  margin-bottom: 80px;
}

.detail_title{
  width: 100%;
  height: 53px;
  line-height: 53px;
  border-bottom: 1px solid #999595;
}

.detail_title_name{
  width: 160rpx;
  font-size:38rpx;
  margin-left: 38%;
  border-bottom: 2px solid red;
}

.bottom{
  width: 100%;
  height:60px;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  border-top:1px solid #888888;
}

.home,.collect{
  width: 16%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #888888;
}

.home{
  border-right: 1px solid #888888;
}

.home image,.collect image{
  width: 50%;
  height: 56%;
  margin-left:25%;
  margin-top:10px;
}

.home text,.collect text{
  font-size: 28rpx;
  line-height: 25px;
}

.add,.buy{
  width: 34%;
  height: 100%;
  text-align: center;
  line-height: 60px;
}

.add{
  background-color: #fd8853;
}

.buy{
  background-color: #fe4543;
}

.add text,.buy text{
  color:#ffffff;
}

.shopping_box{
  width: 100%;
  height: 340px;
  position: fixed;
  bottom:60px;
}

.shopping_content{
  width: 100%;
  height: 280px;
  position: fixed;
  bottom:60px;
  background-color: #ffffff;
}

.top_img{
  width: 30%;
  height: 35%;
  position: relative;
  top:3%;
  left: 5%;
  z-index: 100;
}

.shopping_top{
  width: 100%;
  height: 78px;
  border-bottom: 1px solid #888888;
}

.shopping_left{
  display: flex;
  flex-direction: column;
  float: right;
  margin-right: 26%;
}

.shopping_left text{
  font-size: 32rpx;
  margin-top: 10px;
}

.shopping_right{
  float:right;
  margin-right: 5%;
  line-height: 78px;
  font-size:100rpx;
  color:#888888;
}

.guige{
  clear: both;
  width: 100%;
  height: 78px;
  margin-top: 7px;
}

.guige text{
  margin-left: 5%;
  font-size:36rpx;
  line-height: 38px;
  color:#555050;
}

.choose_type{
  margin-left: 5%;
  font-size:30rpx;
  width: 120rpx;
  height: 30px;
  background-color: #fe4543;
  color: #ffffff;
  border-radius: 15rpx;
  text-align: center;
  line-height: 30px;
}

.num_box{
 width: 100%;
 height: 50px;
 display: flex;
 flex-direction: row;
 margin-top: 40px;
 line-height: 50px;
}

.num_title{
  width: 25%;
  margin-left: 5%;
  color: #555050;
}

.num_group{
 margin-left: 10%;
 display: flex;
 flex-direction: row;
 text-align: center;
 line-height: 50px;
}

.num_minus{
  width: 25%;
  height: 100%;
  background-color: #f6f6f6;
}

.num{
  width: 45%;
  height: 100%;
  margin-left: 2%;
  margin-right: 2%;
}

.num input{
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: #eeeeee;
}

.num_add{
  width: 25%;
  height: 100%;
  background-color: #eeeeee;
}
